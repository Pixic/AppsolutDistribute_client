<!-- Defines styles of different layout components -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="explist_group">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:background">@color/ExpGroupBackground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="explist_group_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dip</item>
    </style>

    <style name="explist_child">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:background">@color/ExpChildBackground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="explist_child_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dip</item>
    </style>


    <!-- Dialog layout styles style -->
    <style name="dialog_scroll_style">
        <item name="android:id">@+id/dialog_scroll_layout</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="dialog_linearlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
    </style>
    
    <style name="dialog_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
     <style name="dialog_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
    </style>   
    
     <style name="dialog_button_style">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
     </style>

     <style name="list_dialog">
         <item name="android:layout_width">match_parent</item>        
         <item name="android:layout_height">wrap_content</item>
         <item name="android:background">@color/black</item>
         <item name="android:layout_weight">1</item>  
     </style>
     <style name="dialog_listview_row">
         
     </style>
    <!-- Override the Dialog's theme here, some changes that makes it differs the style from the source -->

    <style name="customdialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <!-- @android:style/DialogWindowTitle -->
        <item name="android:windowBackground">@null</item>
        <!-- @drawable/ic_launcher -->
        <item name="android:windowIsFloating">false</item> 
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!-- Custom dialog popupstyle, some changes that makes it differs the style from the source. Defines the text appearance -->
    <style name="txtAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- Custom dialog popupstyle, unchanged from source -->
    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/txtAppearance</item>
    </style>
    <!-- Custom dialog popupstyle, unchanged from source -->
    <style name="popupStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

</resources>